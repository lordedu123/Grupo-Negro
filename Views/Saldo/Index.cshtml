@model Grupo_negro.Models.ApplicationUser

@{
    ViewData["Title"] = "Mi Saldo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2><i class="fas fa-wallet"></i> Mi Saldo</h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mt-4">
        <!-- Tarjeta de Saldo Actual -->
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-wallet fa-3x text-success mb-3"></i>
                    <h3 class="card-title">Saldo Actual</h3>
                    <h2 class="text-success">$@Model.Saldo.ToString("N2")</h2>
                </div>
            </div>
        </div>

        <!-- Acciones R치pidas -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-cogs"></i> Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Depositar", "Saldo")" class="btn btn-success">
                            <i class="fas fa-plus-circle"></i> Depositar Dinero
                        </a>
                        <a href="@Url.Action("Retirar", "Saldo")" class="btn btn-warning">
                            <i class="fas fa-minus-circle"></i> Retirar Dinero
                        </a>
                        <a href="@Url.Action("Historial", "Saldo")" class="btn btn-info">
                            <i class="fas fa-history"></i> Ver Historial
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Informaci칩n Importante</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Los dep칩sitos se procesan instant치neamente</li>
                        <li><i class="fas fa-check text-success"></i> Los retiros pueden tardar hasta 24 horas</li>
                        <li><i class="fas fa-check text-success"></i> Aceptamos PayPal y Yape</li>
                        <li><i class="fas fa-check text-success"></i> Todas las transacciones son seguras</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>