@using Grupo_negro.Models
@model LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    body {
        background: linear-gradient(135deg, #2a2222 60%, #b00 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .login-container {
        background: #fff4f4;
        margin: 50px auto;
        padding: 40px 50px;
        border-radius: 16px;
        max-width: 400px;
        box-shadow: 0 8px 32px #00000044;
        text-align: center;
    }
    .login-header {
        font-size: 2em;
        font-weight: bold;
        color: #b00;
        margin-bottom: 8px;
        letter-spacing: 2px;
        text-shadow: 1px 1px 0 #fff, 2px 2px 8px #b00a;
    }
    .login-sub {
        color: #666;
        font-size: 1.1em;
        margin-bottom: 25px;
    }
    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }
    .form-label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        font-weight: 500;
    }
    .form-input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 1em;
        transition: border-color 0.3s;
        box-sizing: border-box;
    }
    .form-input:focus {
        outline: none;
        border-color: #b00;
        box-shadow: 0 0 8px #b00a;
    }
    .btn-login {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #b00, #d00);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1em;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 10px;
    }
    .btn-login:hover {
        background: linear-gradient(135deg, #d00, #b00);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px #b00a;
    }
    .form-check {
        display: flex;
        align-items: center;
        margin: 15px 0;
        text-align: left;
    }
    .form-check-input {
        margin-right: 8px;
    }
    .register-link {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
        color: #666;
    }
    .register-link a {
        color: #b00;
        text-decoration: none;
        font-weight: 500;
    }
    .register-link a:hover {
        text-decoration: underline;
    }
    .validation-summary {
        background: linear-gradient(135deg, #ff4444, #cc0000);
        border: 2px solid #cc0000;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        color: white;
        text-align: left;
        font-weight: 500;
        box-shadow: 0 4px 12px rgba(204, 0, 0, 0.3);
    }
</style>

<div class="login-container">
    <div class="login-header">Iniciar Sesión</div>
    <div class="login-sub">Accede a tu cuenta de APUESTA KONGNOSTROS</div>

    @if (!ViewData.ModelState.IsValid || ViewData.ModelState.ErrorCount > 0)
    {
        <div class="validation-summary">
            <strong>❌ Error de inicio de sesión:</strong>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>• @error.ErrorMessage</div>
            }
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="validation-summary">
            <strong>❌ Error:</strong> @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email" class="form-label">Correo Electrónico</label>
            <input asp-for="Email" class="form-input" type="email" placeholder="Ingresa tu correo electrónico" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label">Contraseña</label>
            <input asp-for="Password" class="form-input" type="password" placeholder="Ingresa tu contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
            <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
        </div>

        <button type="submit" class="btn-login">INICIAR SESIÓN</button>
    </form>

    <div class="register-link">
        ¿No tienes una cuenta? 
        <a asp-action="Register">Regístrate aquí</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}