@using Grupo_negro.Models
@model RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
}

<style>
    body {
        background: linear-gradient(135deg, #2a2222 60%, #b00 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .register-container {
        background: #fff4f4;
        margin: 30px auto;
        padding: 40px 50px;
        border-radius: 16px;
        max-width: 500px;
        box-shadow: 0 8px 32px #00000044;
        text-align: center;
    }
    .register-header {
        font-size: 2em;
        font-weight: bold;
        color: #b00;
        margin-bottom: 8px;
        letter-spacing: 2px;
        text-shadow: 1px 1px 0 #fff, 2px 2px 8px #b00a;
    }
    .register-sub {
        color: #666;
        font-size: 1.1em;
        margin-bottom: 25px;
    }
    .form-row {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }
    .form-group {
        flex: 1;
        text-align: left;
    }
    .form-group.full-width {
        margin-bottom: 20px;
        text-align: left;
    }
    .form-label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        font-weight: 500;
        font-size: 0.9em;
    }
    .form-input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 1em;
        transition: border-color 0.3s;
        box-sizing: border-box;
    }
    .form-input:focus {
        outline: none;
        border-color: #b00;
        box-shadow: 0 0 8px #b00a;
    }
    .btn-register {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #b00, #d00);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1em;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 10px;
    }
    .btn-register:hover {
        background: linear-gradient(135deg, #d00, #b00);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px #b00a;
    }
    .login-link {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
        color: #666;
    }
    .login-link a {
        color: #b00;
        text-decoration: none;
        font-weight: 500;
    }
    .login-link a:hover {
        text-decoration: underline;
    }
    .validation-summary {
        background: linear-gradient(135deg, #ff4444, #cc0000);
        border: 2px solid #cc0000;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        color: white;
        text-align: left;
        font-weight: 500;
        box-shadow: 0 4px 12px rgba(204, 0, 0, 0.3);
    }
    .validation-summary ul {
        margin: 0;
        padding-left: 20px;
    }
    .validation-summary li {
        margin-bottom: 5px;
    }
    .text-danger {
        color: #cc0000;
        font-size: 0.85em;
        margin-top: 3px;
        display: block;
    }
</style>

<div class="register-container">
    <div class="register-header">Registrarse</div>
    <div class="register-sub">Crea tu cuenta en APUESTA KONGNOSTROS</div>

    @if (!ViewData.ModelState.IsValid || ViewData.ModelState.ErrorCount > 0)
    {
        <div class="validation-summary">
            <strong>❌ Por favor corrige los siguientes errores:</strong>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>• @error.ErrorMessage</div>
            }
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="validation-summary">
            <strong>❌ Error:</strong> @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div style="background: linear-gradient(135deg, #28a745, #20c997); border: 2px solid #28a745; border-radius: 8px; padding: 15px; margin-bottom: 20px; color: white; font-weight: 500;">
            <strong>✅ Éxito:</strong> @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Register" method="post">
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Nombres" class="form-label">Nombres</label>
                <input asp-for="Nombres" class="form-input" placeholder="Tus nombres" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="form-label">Apellidos</label>
                <input asp-for="Apellidos" class="form-input" placeholder="Tus apellidos" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="DNI" class="form-label">DNI</label>
                <input asp-for="DNI" class="form-input" placeholder="Tu DNI" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="form-label">Celular</label>
                <input asp-for="Celular" class="form-input" placeholder="Tu número celular" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group full-width">
            <label asp-for="Email" class="form-label">Correo Electrónico</label>
            <input asp-for="Email" class="form-input" type="email" placeholder="tu@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>



        <div class="form-row">
            <div class="form-group">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" class="form-input" type="password" placeholder="Tu contraseña" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                <input asp-for="ConfirmPassword" class="form-input" type="password" placeholder="Confirma tu contraseña" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn-register">CREAR CUENTA</button>
    </form>

    <div class="login-link">
        ¿Ya tienes una cuenta? 
        <a asp-action="Login">Inicia sesión aquí</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}