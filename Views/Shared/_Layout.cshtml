<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grupo_negro</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar mb-3">
            <div class="container-fluid">
                <a class="navbar-brand custom-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span style="color:#fff; background:#b00; padding:6px 18px; border-radius:8px; font-size:1.5em; font-weight:bold; box-shadow:0 2px 8px #b00a;">APUESTA</span>
                    <span style="color:#222; font-size:1.3em; font-weight:bold; margin-left:8px;">KONGNOSTROS</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 custom-nav">
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link custom-link" asp-area="" asp-controller="Apuestas" asp-action="Index">
                                    <i class="fas fa-futbol"></i> Apuestas
                                </a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link custom-link" style="color: #fff;">¡Hola, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                    <button type="submit" class="nav-link custom-link" style="background: none; border: none; cursor: pointer;">Cerrar sesión</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link custom-link" asp-area="" asp-controller="Account" asp-action="Register">Registrarse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-link" asp-area="" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-area="" asp-controller="Tienda" asp-action="Index">Nosotros</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <style>
            .custom-navbar {
                background: linear-gradient(90deg, #b00 0%, #2a2222 100%);
                box-shadow: 0 4px 16px #b00a;
                border-bottom: 3px solid #fff4f4;
                padding: 0;
            }
            .custom-brand {
                display: flex;
                align-items: center;
                gap: 8px;
                letter-spacing: 1px;
            }
            .custom-nav {
                display: flex;
                gap: 18px;
                margin-left: 30px;
            }
            .custom-link {
                color: #fff !important;
                font-weight: bold;
                font-size: 1.1em;
                padding: 10px 18px;
                border-radius: 6px;
                transition: background 0.2s, color 0.2s, transform 0.2s;
            }
            .custom-link:hover {
                background: #fff4f4;
                color: #b00 !important;
                transform: scale(1.08);
                box-shadow: 0 2px 8px #b00a;
            }
        </style>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Grupo_negro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
