@model List<Partido>
@{
    ViewBag.Title = "Apuestas Deportivas";
}

<div class="container-fluid mt-3">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body bg-gradient text-white" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="mb-1">
                                <i class="fas fa-futbol me-2"></i>Apuestas Deportivas
                            </h2>
                            <p class="mb-0 opacity-75">Encuentra las mejores cuotas en las ligas más importantes del mundo</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-action="MisApuestas" class="btn btn-light btn-lg">
                                <i class="fas fa-history me-2"></i>Mis Apuestas
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar de Ligas -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 text-muted fw-bold">
                            <i class="fas fa-filter me-2"></i>FILTRAR POR LIGA
                        </h6>
                        <div class="dropdown">
                            <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cog"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><button class="dropdown-item" type="button" onclick="limpiarPreferencias()">
                                    <i class="fas fa-eraser me-2"></i>Limpiar Preferencias
                                </button></li>
                            </ul>
                        </div>
                    </div>
                    @if (ViewBag.LigaFavorita != null)
                    {
                        <div class="alert alert-info alert-sm mt-2 mb-0 py-1">
                            <small><i class="fas fa-heart me-1"></i>Liga favorita: <strong>@ViewBag.LigaFavorita</strong></small>
                        </div>
                    }
                    @if (ViewBag.UltimaVisita != null)
                    {
                        <div class="alert alert-secondary alert-sm mt-2 mb-0 py-1">
                            <small><i class="fas fa-clock me-1"></i>Última visita: <strong>@ViewBag.UltimaVisita</strong></small>
                        </div>
                    }
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <button class="list-group-item list-group-item-action liga-filter active border-0 py-3" data-liga="0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-globe text-primary me-3"></i>
                                <div>
                                    <div class="fw-semibold">Todas las Ligas</div>
                                    <small class="text-muted">Ver todos los partidos</small>
                                </div>
                            </div>
                        </button>
                        @if (ViewBag.Ligas != null)
                        {
                            @foreach (var liga in (List<Liga>)ViewBag.Ligas)
                            {
                                <button class="list-group-item list-group-item-action liga-filter border-0 py-3" data-liga="@liga.Id">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-trophy text-warning me-3"></i>
                                            <div>
                                                <div class="fw-semibold">@liga.Nombre</div>
                                                <small class="text-muted">@liga.Pais</small>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="guardarLigaFavorita(@liga.Id, '@liga.Nombre')" title="Marcar como favorita">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </div>
                                </button>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Partidos -->
        <div class="col-lg-9 col-md-8">
            <div id="partidosContainer">
                @await Html.PartialAsync("_PartidosPartial", Model)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Función para apuesta rápida
        function quickBet(partidoId, tipoApuesta, cuota) {
            const url = '@Url.Action("Apostar", "Apuestas")' + '/' + partidoId;
            window.location.href = url;
        }

        // Función para guardar liga favorita
        function guardarLigaFavorita(ligaId, ligaNombre) {
            fetch('@Url.Action("GuardarLigaFavorita", "Apuestas")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: 'ligaId=' + encodeURIComponent(ligaId)
            })
            .then(response => {
                if (response.ok) {
                    // Mostrar mensaje de éxito
                    const alert = document.createElement('div');
                    alert.className = 'alert alert-success alert-dismissible fade show position-fixed';
                    alert.style.top = '20px';
                    alert.style.right = '20px';
                    alert.style.zIndex = '9999';
                    alert.innerHTML = `
                        <i class="fas fa-heart me-2"></i>${ligaNombre} marcada como favorita!
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;
                    document.body.appendChild(alert);
                    
                    // Auto-remover después de 3 segundos
                    setTimeout(() => {
                        if (alert.parentElement) {
                            alert.remove();
                        }
                    }, 3000);
                } else {
                    console.error('Error al guardar liga favorita');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        // Función para limpiar preferencias
        function limpiarPreferencias() {
            if (confirm('¿Estás seguro de que quieres limpiar todas tus preferencias?')) {
                fetch('@Url.Action("LimpiarPreferencias", "Apuestas")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Manejo de filtros de liga
            const ligaFilters = document.querySelectorAll('.liga-filter');
            
            ligaFilters.forEach(filter => {
                filter.addEventListener('click', function() {
                    // Remover clase active de todos los botones
                    ligaFilters.forEach(f => f.classList.remove('active'));
                    
                    // Agregar clase active al botón clickeado
                    this.classList.add('active');
                    
                    const ligaId = this.getAttribute('data-liga');
                    
                    if (ligaId == '0') {
                        // Mostrar todos los partidos
                        location.reload();
                    } else {
                        // Filtrar por liga específica
                        fetch('@Url.Action("PorLiga", "Apuestas")/' + ligaId)
                            .then(response => response.text())
                            .then(data => {
                                document.getElementById('partidosContainer').innerHTML = data;
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('Error al cargar los partidos');
                            });
                    }
                });
            });
        });
    </script>
}