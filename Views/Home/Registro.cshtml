@{
    ViewData["Title"] = "Registro";
}

<style>
    body {
        background: linear-gradient(135deg, #2a2222 60%, #b00 100%);
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .registro-container {
        background: #fff4f4;
        margin: 50px auto;
        padding: 50px 60px 40px 60px;
        border-radius: 16px;
        max-width: 650px;
        box-shadow: 0 8px 32px #00000044;
        text-align: center;
        position: relative;
    }
    .registro-header {
        text-align: center;
        font-size: 2.2em;
        font-weight: bold;
        color: #b00;
        margin-bottom: 8px;
        letter-spacing: 2px;
        text-shadow: 1px 1px 0 #fff, 2px 2px 8px #b00a;
    }
    .registro-sub {
        text-align: center;
        color: #222;
        font-weight: 500;
        font-size: 1.3em;
        margin-bottom: 18px;
    }
    .registro-form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px 30px;
    }
    .registro-form input[type="text"],
    .registro-form input[type="email"] {
        background: #ffd6d6;
        border: none;
        padding: 12px;
        border-radius: 6px;
        width: 100%;
        margin-bottom: 10px;
        font-size: 1em;
    }
    .registro-form label {
        font-weight: bold;
        color: #b00;
        margin-bottom: 5px;
        font-size: 1em;
    }
    .registro-form .full {
        grid-column: 1 / 3;
    }
    .registro-form .checkboxes {
        grid-column: 1 / 3;
        display: flex;
        gap: 30px;
        align-items: center;
        margin-bottom: 15px;
    }
    .registro-form .checkboxes label {
        font-weight: normal;
        color: #222;
    }
    .registro-form .captcha {
        grid-column: 1 / 3;
        margin-bottom: 15px;
    }
    .registro-form button {
        grid-column: 1 / 3;
        background: #ff0000;
        color: #fff;
        font-size: 1.2em;
        border: none;
        border-radius: 8px;
        padding: 16px 0;
        cursor: pointer;
        font-weight: bold;
        margin-top: 10px;
        box-shadow: 0 2px 8px #b00a;
        transition: background 0.2s, transform 0.2s;
    }
    .registro-form button:hover {
        background: #b00;
        transform: scale(1.05);
    }
</style>

<div class="registro-container">
    <div class="registro-header">APUESTA <span style="color:#b00">KONGNOSTROS</span></div>
    <div class="registro-sub">Registro</div>
    <form class="registro-form" method="post">
        <div>
            <label for="nombres">Nombres</label>
            <input type="text" id="nombres" name="nombres" />
        </div>
        <div>
            <label for="apellidos">Apellidos</label>
            <input type="text" id="apellidos" name="apellidos" />
        </div>
        <div>
            <label for="dni">DNI</label>
            <input type="text" id="dni" name="dni" />
        </div>
        <div>
            <label for="celular">Celular</label>
            <input type="text" id="celular" name="celular" />
        </div>
        <div class="full">
            <label for="correo">Correo electrónico</label>
            <input type="email" id="correo" name="Correo" required />
        </div>
        <div class="full">
            <label for="password">Contraseña</label>
            <div style="position:relative;">
                <input type="password" id="password" name="Password" required style="background:#ffd6d6; border:none; padding:12px 40px 12px 12px; border-radius:6px; width:100%; font-size:1em; box-shadow:0 2px 8px #b00a;" />
                <span onclick="togglePassword()" style="position:absolute; right:12px; top:50%; transform:translateY(-50%); cursor:pointer; color:#b00; font-size:1.2em;">
                    <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="#b00" stroke-width="2" d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12Z"/><circle cx="12" cy="12" r="3" stroke="#b00" stroke-width="2"/></svg>
                </span>
            </div>
            <script>
                function togglePassword() {
                    var pwd = document.getElementById('password');
                    var icon = document.getElementById('eyeIcon');
                    if (pwd.type === 'password') {
                        pwd.type = 'text';
                        icon.innerHTML = '<path stroke="#b00" stroke-width="2" d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12Z"/><circle cx="12" cy="12" r="3" stroke="#b00" stroke-width="2"/><line x1="4" y1="4" x2="20" y2="20" stroke="#b00" stroke-width="2"/>';
                    } else {
                        pwd.type = 'password';
                        icon.innerHTML = '<path stroke="#b00" stroke-width="2" d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12Z"/><circle cx="12" cy="12" r="3" stroke="#b00" stroke-width="2"/>';
                    }
                }
            </script>
        </div>
        <div class="full">
            <label for="negocio">Indique aquí, cual es el tipo de negocio que estas buscando</label>
            <input type="text" id="negocio" name="negocio" />
        </div>
        <div class="checkboxes">
            <label><input type="checkbox" name="terminos" /> Acepto terminos y condiciones</label>
            <label><input type="checkbox" name="robot" /> No soy un robot</label>
        </div>
        <div class="captcha">
            <!-- Aquí iría el captcha real -->
        </div>
        <button type="submit">Registrarse</button>
    </form>
</div>
